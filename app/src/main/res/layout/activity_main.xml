<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context="com.hellodg.society.SocietyActivity">

            <TextView
                android:id="@+id/playground_output_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/company_output_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/software_developer_group_output_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/network_sample_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onNetSample"
                android:text="@string/btn_net_sample"/>

            <Button
                android:id="@+id/mvp_sample_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onMvp"
                android:text="@string/btn_mvp"/>
        </LinearLayout>
    </ScrollView>
</layout>
